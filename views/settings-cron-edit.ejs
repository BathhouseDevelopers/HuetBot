 <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
    $(document).ready(function() {
    	
    	$("#save").click(function(){
    		
    		var m =  $("#text").val().split("\n")
  
    		var s= new Array()

    		for (var i = 0; i < m.length; i++) {
    			if(m[i]!=''){
    				s.push(m[i])		
    			} 	
    		} 

   
    		
    		var id = $("#_id").val()
    		id = ((id=="new")?null:id)
    		
    		var obj = {
	    				   id:  id,
	    				   value: {
	    					   alias:  $("#alias").val(),
		    				   type :  $("#type").val(),
		    				   cron :  $("#cron").val(),
		    				   text:s	    					   
	    				   }	    				       				
    				  }
    		    		
    		/*
    	  $.post("/service/cron", JSON.stringify(obj),function(){    		      		  
    		  window.location.href = "/adm-cron"
    	  },"JSON").done(function() { alert("second success"); }).fail(function() { alert("error"); })
    		*/
    		  
    		$.ajax({method: "POST",
    			   url: "/service/cron",
    			   dataType: "json",
    			   data: JSON.stringify(obj),
    			   contentType: "application/json",
		    	   success: function(){
		    		    	   alert( "success" );    			
		    				}
    		}).fail(function(jqXHR, textStatus, error) {
    			console.log(error)
 		       alert( "error" );
            })
    	        
    	});
    	
    });

    </script>

